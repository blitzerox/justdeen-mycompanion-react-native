# JustDeen MyCompanion - Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================
# API ENDPOINTS
# ============================================

# Cloudflare Workers API (D1 Database)
CLOUDFLARE_API_URL=https://justdeen-api.your-domain.workers.dev
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# AlAdhan Prayer Times API
ALADHAN_API_URL=https://api.aladhan.com/v1

# ============================================
# AUTHENTICATION
# ============================================

# Google Sign-In
GOOGLE_WEB_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id.apps.googleusercontent.com

# Apple Sign-In (uses native config in app.json)
# No env vars needed - configured in app.json

# ============================================
# IN-APP PURCHASES
# ============================================

# Revenue Cat API Key (optional - if using Revenue Cat)
REVENUE_CAT_API_KEY=your_revenue_cat_key_here

# App Store Shared Secret (for receipt validation)
APP_STORE_SHARED_SECRET=your_app_store_shared_secret

# ============================================
# LOCATION & PRAYER TIMES
# ============================================

# Default prayer calculation method (1-12, see AlAdhan docs)
# 2 = ISNA (Islamic Society of North America)
# 3 = MWL (Muslim World League)
# 4 = Makkah (Umm Al-Qura University)
DEFAULT_PRAYER_METHOD=2

# Default madhab (1 = Shafi, 2 = Hanafi)
DEFAULT_MADHAB=1

# ============================================
# AI CHATBOT
# ============================================

# OpenAI API Key (for AI chat feature)
OPENAI_API_KEY=your_openai_api_key_here

# Model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Segment Write Key (for analytics)
SEGMENT_WRITE_KEY=your_segment_write_key_here

# ============================================
# DEVELOPMENT
# ============================================

# API timeout (milliseconds)
API_TIMEOUT=10000

# Enable debug mode
DEBUG=false

# Reactotron host (for debugging)
REACTOTRON_HOST=localhost
